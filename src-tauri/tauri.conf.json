{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Яндекс Музыка (Unofficial)",
  "version": "0.1.0",
  "identifier": "com.pc.yandex-music-unofficial",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "https://music.yandex.ru/",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Яндекс Музыка (Unofficial)",
        "width": 1200,
        "height": 800,
        "minWidth": 768,
        "minHeight": 261,
        "url": "https://music.yandex.ru/"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "publisher": "FerrisMind",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "windows": {
    "nsis": {
        "displayLanguageSelector": true,
        "installMode": "both"
      },
    "webviewInstallMode": {
      "silent": true,
      "type": "embedBootstrapper"
    }
   }
  }
}
